# 本番用Dockerfile
FROM node:20-alpine as builder

WORKDIR /app

# 依存関係をコピーしてインストール
COPY package*.json ./
RUN npm ci --only=production

# ソースコードをコピー
COPY . .

# 本番用ビルド
RUN npm run build

# Nginxベースの本番用イメージ
FROM nginx:alpine

# ビルドされたファイルをNginxに配置
COPY --from=builder /app/dist /usr/share/nginx/html

# Nginx設定ファイル（SPAサポート用）
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]